  ' vzbBetrag = Format(rs!VZBbetrag, "#,##0.00")
  ' vzbAlt = Format(rs!VZBalt, "#,##0.00")
  vzbBetrag = rs!VZBbetrag
  vzbAlt = rs!VZBalt
  rbNicht = rs!Nicht
  rbKompl = rs!Komplett
  rbVerbraucht = rs!VZBverbraucht  
  fmVZB.w = 600
  Frame1.Y = 150
  Frame1.X = fmVZB.W \ 2 - Frame1.W \ 2
  Panel1.Visible = False
  Frame1.Enabled = False
