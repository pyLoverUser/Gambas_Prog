' Sub:  initComGlob()
'	
'
'==========================================================================
Public Sub initComGlob()
Dim i, j As Integer
For i = 0 To 4
     comGlob[i] = New ComboBox(frGlob) As "MycomGlob"
     With comGlob[i]
       .Tag = i
       .Visible = True
       .Background = Color.ButtonBackground
       .Foreground = Color.Black
       .Font.size = 14
       .Font.name = "Sans Serif"
       .H = 36
       .W = 80
       .Y = 100
       Select Case i
           Case 0       'Anzahl Plätze
               .X = 18
               For j = 1 To 12
                   .Add(Str(j))
               Next
           Case 1       'Regnen Sensor
               .X = 118
               .List = ["Ja", "Nein"]
          Case 2        'System-Rollo Ein
               .X = 399
               For j = 5 To 10
                   .Add(Str(j) & ":00")
               Next
           Case 3       'System-Rollo Aus
               .X = 499
               For j = 19 To 23
                   .Add(Str(j) & ":00")
               Next
           Case 4       'Dauer
               .X = 649
               For j = 10 To 60 Step 10
                   .Add(Str(j))
               Next
       End Select
   End With
Next
InitlblGlob()
End
'==========================================================================
' Sub:  InitlblGlob()
'	
'
'==========================================================================
Public Sub InitlblGlob()
Dim i As Integer
 For i = 0 To 4
      lblGlob[i] = New Label(frGlob) As "MylblGlob"
      With lblGlob[i]
        .Font.Size = 10
        .Visible = True
        .Alignment = Align.Center
        .Foreground = Color.Cyan
        Select Case i
            Case 0
                .Text = "Anz." & Chr(10) & "Plätze"
            Case 1
                .Text = "Regen-" & Chr(10) & "Sensor"
           Case 2
                .W = comGlob[3].X - comGlob[2].X + comGlob[3].W
                .Text = "System-Rollo" & Chr(10) & "Ein        Aus"
            Case 3
                .Text = ""
            Case 4
               .Text = "Dauer" & Chr(10) & "in Min"
        End Select
    .Adjust
    If i <> 2 Then
        .X = comGlob[i].X - (.W \ 2 - comGlob[i].W \ 2)
    Else
        .X = comGlob[2].X + ((comGlob[3].X - comGlob[2].X + comGlob[3].W) \ 2 - .W \ 2)
    Endif
    .Y = comGlob[0].Y - .H - 15
    End With
 Next
End
