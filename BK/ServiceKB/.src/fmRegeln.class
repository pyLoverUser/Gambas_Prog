Public Sub RegSave()
SqlCom = "UPDATE "
Select Case spFl
    Case 1
        SqlTab = "r_Global SET "
        SqlP = "AnzPlaetze = '" & comGlob[0].Text & "',RegnerSig_Fl = '" & comGlob[1].Text & "',SysRolloEin = '" & comGlob[2].Text & "',SysRolloAus = '" &
                    comGlob[3].Text & "',Dauer = '" & comGlob[4].Text & "'"
        rs = fmAdmin.ExecuteSql(SqlCom, SqlTab, SqlP)
    Case 2
        SqlTab = "r_Platz SET "
        SqlP = "Einzel = '" & comPlatz[0].Text & "',Doppel = '" & comPlatz[1].Text & "',maxPause = '" & comPlatz[2].Text & "',delNotComplete = '" &
                    comPlatz[3].Text & "',delActive = '" & comPlatz[4].Text & "',GelbSperre = '" & comPlatz[5].Text & "'"
        rs = fmAdmin.ExecuteSql(SqlCom, SqlTab, SqlP)
    Case 3
        SqlTab = "r_Gastspieler SET "
        SqlP = "Gast_Erlaubt = '" & comGast[0].Text & "',Gast_Anz_Eingesch = '" & comGast[1].Text & "',Gast_Anz = '" & comGast[2].Text & "',Gast_Buch_Min = '" &
                    comGast[3].Text & "',GastPrErw = '" & Val(comGast[4].Text) & "',GastPrJug = '" & Val(comGast[5].Text) & "'"
        rs = fmAdmin.ExecuteSql(SqlCom, SqlTab, SqlP)
End Select
    
    
End

Public Sub MycomGlob_Change()
