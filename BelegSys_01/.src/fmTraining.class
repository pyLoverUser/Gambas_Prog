                SqlCom = "INSERT INTO "
                SqlTab = "MannschTrain "
                SqlP = "(InfoText) VALUES   ('" & .Text & "')"
                rs = DatabaseService.ExecuteSql(SqlCom, SqlTab, SqlP)
                gridMannsch.Rows.count += 1
                gridMannsch.Refresh
            Else
                id = Val(gridMannsch[row, 0].text)
                SqlCom = "UPDATE "
                SqlTab = "MannschTrain "
                SqlP = "SET InfoText = '" & .Text & "' WHERE id = " & id
